@model Flight.Pages.Flights.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Flight.ID" />
            <div class="form-group">
                <label asp-for="Flight.From" class="control-label"></label>
                <input asp-for="Flight.From" class="form-control" />
                <span asp-validation-for="Flight.From" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.To" class="control-label"></label>
                <input asp-for="Flight.To" class="form-control" />
                <span asp-validation-for="Flight.To" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.Stops" class="control-label"></label>
                <input asp-for="Flight.Stops" class="form-control" />
                <span asp-validation-for="Flight.Stops" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.Price" class="control-label"></label>
                <input asp-for="Flight.Price" class="form-control" />
                <span asp-validation-for="Flight.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.departing" class="control-label"></label>
                <input asp-for="Flight.departing" class="form-control" />
                <span asp-validation-for="Flight.departing" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.arrival" class="control-label"></label>
                <input asp-for="Flight.arrival" class="form-control" />
                <span asp-validation-for="Flight.arrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Flight.seatsAvailable" class="control-label"></label>
                <input asp-for="Flight.seatsAvailable" class="form-control" />
                <span asp-validation-for="Flight.seatsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
