<br>
<form asp-controller="" asp-action="Index">
    <div class="well">
        <div class="row">
            <div class="col-lg-2">
                <div class="input-group">

                    <span class="input-group-addon" id="basic-addon1">from</span>
                    <input type="text" class="form-control" placeholder="Boston" name="fromString" aria-describedby="basic-addon1">

                </div>
            </div>

            <div class="col-lg-2">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">to</span>
                    <input type="text" class="form-control" placeholder="Cochin" name="toString" aria-describedby="basic-addon1" />

                </div>
            </div>


            <div class='col-lg-4'>
                <div class="input-group">

                    <span class="input-group-addon" id="basic-addon1">on date:</span>
                    <input type='text' class="form-control" id='datetimepicker4' />
                </div>
            </div>
            <script type="text/javascript">
$(function() {
                $('#datetimepicker4').datetimepicker();
});</script>

            <div class='col-lg-4'>
                <div class="input-group">

                    <span class="input-group-addon" id="basic-addon1">to date:</span>
                    <input type='text' class="form-control" id='datetimepicker5' />
                </div>
            </div>
            <script type="text/javascript">
$(function() {
                $('#datetimepicker5').datetimepicker();
});</script>

        </div>

        <br>

        <div class="row">

            <div class="col-lg-2">
                <div class="input-group-btn">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Round Trip
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href="#">Round Trip</a></li>
                            <li><a href="#">One way</a></li>

                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-2">
                <div class="input-group-btn">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            No of Passengers
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>

                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-2">

                <div class="input-group-btn">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Economy
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                            <li><a href="#">Economy</a></li>
                            <li><a href="#">Premium</a></li>

                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>


    <div class=well>



        <br>

        <div class="row">
            <div class="col-lg-8">
                <div class="input-group">
                    <span class="input-group-addon" id="sizing-addon1">non functionals</span>
                    <input type="text" class="form-control" name="preference" placeholder="((price and stops) or (price and seats))" aria-describedby="sizing-addon1">
                </div>
            </div>
            <div class="col-lg-4">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>

        </div>



    </div>
</form>

<table class="table table-borderless table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.From)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.To)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Stops)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Price)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.departing)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.arrival)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.seatsAvailable)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.From)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stops)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.departing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.arrival)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.seatsAvailable)
            </td>
        </tr>
        }

    </tbody>

</table>