    <script type="text/javascript">  
  
        $(document).ready(function () {  
  
            $(".select1").change(function (element) {  
  
                $.ajax({    
                    url: '@Url.Action("List", "AirRoutes")',
                    data: { value: $(this).val() },
                    success: function (response) {  
                        $(".select-picker1").html(response);  
                    },  
                    error: function (error) {  
  
                    }  
                });  
  
            });

                $(".select2").change(function (element) {  
  
                $.ajax({    
                    url: '@Url.Action("List", "AirRoutes")',
                    data: { value: $(this).val() },
                    success: function (response) {  
                        $(".select-picker2").html(response);  
                    },  
                    error: function (error) {  
  
                    }  
                }) 
  
            });

                $(".select3").change(function (element) {  
  
                $.ajax({    
                    url: '@Url.Action("List", "AirRoutes")',
