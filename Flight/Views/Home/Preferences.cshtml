@model Flight.Models.GroupIndexViewModel
<form asp-action="Preferences" asp-controller="" method="get">
<br><br>
    @("")
  @for (var i = 0; i < Model.Filters.Count; i++) 
    {

        <input type="checkbox" asp-for="@Model.Filters[i].Selected"  />
                
        @("Preference Set:")

        <select asp-for="@Model.Filters[i].AndOr">
            <option selected disabled> -- And/Or Min/Max -- </option>
            <option value="and">And - Min - Least of</option>
            <option value="or">Or - Max - Best of</option>
        </select>
        <div>
        <select asp-for="@Model.Filters[i].Prefa" class="select1">
            <option selected disabled> --  preference a -- </option>
            <option value="stops" >Stops</option>
            <option value="price">Price</option>
            <option value="seats">Seats Available</option>
        </select>  
        </div>
        <div class="select-picker1">  </div>  

        <div>
        <select asp-for="@Model.Filters[i].Prefb" class="select2">
            <option selected disabled> --  preference b -- </option>
            <option value="stops" >Stops</option>
            <option value="price">Price</option>
            <option value="seats">Seats Available</option>
        </select>  
        </div>
        <div class="select-picker2">  </div>

        <div>
        <select asp-for="@Model.Filters[i].Prefc" class="select3">
            <option selected disabled> --  preference b -- </option>
            <option value="stops" >Stops</option>
            <option value="price">Price</option>
            <option value="seats">Seats Available</option>
        </select>  
        </div>
        <div class="select-picker3">  </div>

        <br>
        <br>
        <br>

        <select name="and_or_split_1">
            <option selected disabled> -- And/Or -- </option>
            <option value="and">And</option>
            <option value="or">Or</option>
        </select>

    <br><br>
          <button type="submit" name="submit" value="change">Change</button>
    <br><br>
  }
    <br><br>
          <button type="submit" name="submit" value="add">Add</button>
</form>

